{
  "description": "SuperClaude hooks for session management and code formatting",
  "schema_version": "2.1.0",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "python {{SCRIPTS_PATH}}/session_init.py",
            "timeout": 10,
            "once": true
          }
        ]
      },
      {
        "matcher": "clear",
        "hooks": [
          {
            "type": "command",
            "command": "python {{SCRIPTS_PATH}}/context_reset.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "python {{SCRIPTS_PATH}}/context_reset.py",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python {{SCRIPTS_PATH}}/skill_activator.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python {{SCRIPTS_PATH}}/context_loader.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python {{SCRIPTS_PATH}}/prettier_hook.py",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
