{
  "description": "SuperClaude hooks for session management and code formatting. Async hooks supported (v2.1.34+).",
  "schema_version": "2.1.37",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "python {{SCRIPTS_PATH}}/session_init.py",
            "timeout": 10,
            "once": true
          }
        ]
      },
      {
        "matcher": "clear",
        "hooks": [
          {
            "type": "command",
            "command": "python {{SCRIPTS_PATH}}/context_reset.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "python {{SCRIPTS_PATH}}/context_reset.py",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python {{SCRIPTS_PATH}}/skill_activator.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python {{SCRIPTS_PATH}}/context_loader.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python {{SCRIPTS_PATH}}/prettier_hook.py",
            "timeout": 30
          },
          {
            "_comment": "[superclaude] optional — set SUPERCLAUDE_AUTO_TEST=0 to disable",
            "type": "command",
            "command": "python {{SCRIPTS_PATH}}/test_runner_hook.py",
            "timeout": 120
          }
        ]
      }
    ],
    "Setup": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python {{SCRIPTS_PATH}}/session_init.py",
            "timeout": 30
          }
        ]
      }
    ],
    "TeammateIdle": [
      {
        "_comment": "[superclaude] experimental — Requires CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS=1 (v2.1.33)",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Teammate idle — assign next task'",
            "timeout": 10
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "_comment": "[superclaude] experimental — Requires CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS=1 (v2.1.33)",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Task completed — aggregate results'",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
